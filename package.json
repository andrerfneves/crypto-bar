{
  "name": "mono-tray",
  "version": "0.3.0",
  "main": "index.js",
  "title": "Mono Tray",
  "description": "Mono Tray Electron Application",
  "copyright": "Copyright © 2018 André Neves",
  "author": {
    "name": "André Neves",
    "email": "andrerfneves@protonmail.com",
    "url": "https://monoapp.io"
  },
  "scripts": {
    "start": "yarn react:dev",
    "react:dev": "webpack-dev-server --config config/webpack.config.js --mode development --open",
    "react:build": "webpack --config config/webpack.config.js --mode production",
    "react:deploy": "cd build && now && now alias mono-tray.now.sh",
    "lint:precommit": "eslint ./app/",
    "flow:precommit": "glow",
    "electron:dev": "electron -r babel-register .",
    "electron:prepare": "rm -rf dist && mkdir dist",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "bundle:profile:prepare": "rm -rf ./webpack-stats/stats.json && touch ./webpack-stats/stats.json",
    "bundle:profile": "webpack --profile --json > webpack-stats/stats.json",
    "bundle:analyze": "webpack-bundle-analyzer webpack-stats/stats.json",
    "analyze": "yarn bundle:profile:prepare && yarn bundle:profile && yarn bundle:analyze",
    "flow:coverage": "flow-coverage-report -t html -i 'app/**/*.js' -x 'build/*.js' --threshold 70",
    "flow:report": "yarn flow:coverage && cd ./flow-coverage && open index.html"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-core": "^6.26.0",
    "better-react-spinkit": "^2.0.4",
    "classnames": "^2.2.5",
    "format-currency": "^1.0.0",
    "history": "^4.7.2",
    "moment": "^2.22.2",
    "node-machine-id": "^1.1.10",
    "node-sass": "^4.9.2",
    "numeral": "^2.0.6",
    "open": "0.0.5",
    "raven": "^2.4.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.3.3",
    "react-icons": "^2.2.7",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "socket.io-client": "^2.1.0",
    "underscore": "^1.8.3",
    "uuid": "^3.2.1",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.26.0",
    "css-loader": "^0.28.11",
    "electron": "^1.8.4",
    "electron-builder": "^20.26.0",
    "electron-google-analytics": "0.0.24",
    "electron-log": "^2.2.14",
    "electron-positioner": "^3.0.0",
    "electron-store": "^1.3.0",
    "electron-updater": "^3.0.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "flow-bin": "^0.69.0",
    "flow-coverage-report": "^0.5.0",
    "glow": "^1.2.2",
    "html-webpack-plugin": "^3.1.0",
    "postcss-loader": "^2.1.6",
    "pre-commit": "^1.2.2",
    "redux-logger": "^3.0.6",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.4.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1"
  },
  "pre-commit": ["flow:precommit"],
  "build": {
    "appId": "com.mono.tray",
    "productName": "Mono Tray",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg"
      ]
    }
  }
}
