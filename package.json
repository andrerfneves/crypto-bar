{
  "name": "mono-tray",
  "version": "0.3.0",
  "main": "build/index.js",
  "title": "Mono Tray",
  "description": "Mono Tray Electron Application",
  "copyright": "Copyright © 2018 André Neves",
  "author": {
    "name": "André Neves",
    "email": "andrerfneves@protonmail.com",
    "url": "https://monoapp.io"
  },
  "scripts": {
    "start": "yarn react:dev",
    "react:dev": "webpack-dev-server --config config/webpack.config.js --mode development",
    "react:build": "webpack --config config/webpack.config.js --mode production",
    "react:deploy": "cd build && now && now alias mono-tray.now.sh",
    "lint:precommit": "eslint ./app/",
    "flow:precommit": "glow",
    "electron:dev": "electron -r babel-register .",
    "electron:prepare": "yarn icon:build && rm -rf dist && mkdir dist",
    "electron:pack": "yarn electron:prepare && electron-builder --dir",
    "electron:dist": "yarn electron:prepare && electron-builder",
    "preelectron:prepare": "yarn react:build",
    "bundle:profile:prepare": "rm -rf ./webpack-stats/stats.json && touch ./webpack-stats/stats.json",
    "bundle:profile": "webpack --profile --json > webpack-stats/stats.json",
    "bundle:analyze": "webpack-bundle-analyzer webpack-stats/stats.json",
    "analyze": "yarn bundle:profile:prepare && yarn bundle:profile && yarn bundle:analyze",
    "flow:coverage": "flow-coverage-report -t html -i 'app/**/*.js' -x 'build/*.js' --threshold 70",
    "flow:report": "yarn flow:coverage && cd ./flow-coverage && open index.html",
    "postinstall": "electron-builder install-app-deps",
    "icon:build": "./node_modules/.bin/electron-icon-maker --input=build-assets/icon.png --output=./build",
    "posticon:build": "mv build/icons/mac/icon.icns build/icon.icns && rm -rf build/icons"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "better-react-spinkit": "^2.0.4",
    "classnames": "^2.2.5",
    "connected-react-router": "^4.5.0",
    "history": "^4.7.2",
    "moment": "^2.22.2",
    "node-machine-id": "^1.1.10",
    "node-sass": "^4.9.3",
    "numeral": "^2.0.6",
    "raven": "^2.6.4",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-hot-loader": "^4.3.3",
    "react-icons": "^3.1.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "socket.io-client": "^2.1.0",
    "underscore": "^1.8.3",
    "uuid": "^3.2.1",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "autoprefixer": "^9.1.5",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.2",
    "css-loader": "^1.0.0",
    "electron": "^3.0.0",
    "electron-builder": "^20.28.4",
    "electron-google-analytics": "^0.1.0",
    "electron-icon-maker": "^0.0.4",
    "electron-log": "^2.2.17",
    "electron-positioner": "^4.1.0",
    "electron-updater": "^3.1.2",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^2.50.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "flow-bin": "^0.81.0",
    "flow-coverage-report": "^0.6.0",
    "glow": "^1.2.2",
    "html-webpack-plugin": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "pre-commit": "^1.2.2",
    "redux-logger": "^3.0.6",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.20.2",
    "webpack-bundle-analyzer": "^3.0.2",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.9"
  },
  "pre-commit": [
    "flow:precommit"
  ],
  "build": {
    "appId": "com.mono.tray",
    "productName": "Mono Tray",
    "asar": true,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg"
      ]
    }
  }
}
